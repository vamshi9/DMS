<div class="container contact">
	<div class="row">
		<div class="col s8 col m10">
			<div class="card-panel teal lighten-2 center-align">
				CONTACT FORM
			</div>
			<div class="card">
				<div class="card-content">
					{{#if enquirySubmitted}}
					<h3>Thanks for getting in touch.</h3>
					<a href="/contact">Submit another enquiry</a>
					{{else}}
					<form method="post">
						<input type="hidden" name="action" value="contact">
						<div class="input-field col s12 {{#if validationErrors.name}}has-error{{/if}}">
							<label>Name</label>
							<input type="text" name="name.full" class="form-control" value="Dr. {{user.name.first}} {{user.name.last}} " disabled>
						</div>
						<div class="input-field col s12 {{#if validationErrors.email}}has-error{{/if}}">
							<label>Email</label>
							<input type="email" name="email" class="form-control" value="{{user.email}}" disabled>
						</div>
						<div class="input-field col s12">
							<label>Phone</label>
							<input type="text" name="phone" placeholder="(optional)" class="form-control" value="{{formData.phone}}">
						</div>
						{{!--
						<div class="input-field col s12 {{#if validationErrors.enquiryType}}has-error{{/if}}">
							<label>What are you contacting us about?</label>
							<select name="enquiryType" class="form-control">
								<option value="">(select one)</option>
								{{#each enquiryTypes}}
								<option value="{{value}}">{{label}}</option>
								{{/each}}
							</select>
						</div> --}}
						<div class="input-field col s12 {{#if validationErrors.message}}has-error{{/if}} ">
							<label>Message</label>
							<textarea name="message" placeholder="Leave us a message..." id="textarea1" class="materialize-textarea" data-length="120">{{formData.message}}</textarea>
						</div>
						<div class="form-actions">
							<button type="submit" class="btn btn-primary">Send</button>
						</div>

					</form>
					{{/if}}
				</div>
			</div>
		</div>
	</div>
</div>