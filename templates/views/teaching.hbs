<div class="container-fluid teaching">
    <div class="row">
        <div class="col s4">
            <h1 class="center-align">
                <i class="material-icons">arrow_forward</i>
                Student Learning Outcome (SLO) :- 
                <span>{{data.teachingData.length}} courses were taken up during {{data.year}} </span>
            </h1>
        </div>
        <div class="offset-s4 col s4">
            <form action="/teaching-initiatives" method="post">
                <div class="input-field col s4">
                    <select id="yearPicker" name="year"></select>
                </div>
                <button type="submit" value="go" class="btn waves-effect waves-light">go</button>
            </form>
        </div>
    </div>
    <div class="row">

        {{#each data.teachingData}}
        <div class="{{ifEven @index}} cardPanel">
            <div class="card-panel grey lighten-5 z-depth-3 hoverable">
                <div class="flow-text center-align teal">
                    {{course}} in {{year}}
                </div>
                <div class="row valign-wrapper">
                    <div class="col s4 m4 l3 center-align ">
                        <img src="/images/{{updatedBy}}.jpg" alt="updated by" class="circle responsive-img ">
                        <p>{{professorName}}</p>
                    </div>
                    <div class="col s8 m8 l9">
                        <blockquote>
                            {{{description}}}
                        </blockquote>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script>
    var max = new Date().getFullYear();
    min = max - 36;
    select = document.getElementById('yearPicker');
    for (let i = max; i >= min; i--) {
        var opt = document.createElement("option");
        opt.value = i;
        opt.name = "year";
        opt.innerHTML = i;
        select.appendChild(opt);
    }
</script>